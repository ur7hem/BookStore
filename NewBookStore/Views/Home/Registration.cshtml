@{
	Layout = null;

}
<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<link rel="stylesheet" href="~/css/Registration.css">
	<title>Электронная библиотека</title>
</head>
<body>
	<div class="navbar">
		<a href="@Url.Action("Index", "Home")">Главная</a>
		<a href="@Url.Action("Books", "Home")">Все книги</a>
		<a><input class="search" type="search"></a>
		<a href="@Url.Action("LogInForm", "Home")">Войти</a>
		<a href="@Url.Action("Registration", "Home")">Регистрация</a>
	</div>
	<div class="maine">
		<h2>Введите данные для регистрации</h2>
		<label class="reg">Введите логин (e-mail)</label>
		<p class="reg"><input class="p5" type="email" value="my_name@domaine.com" required></p>
		<label class="reg">Введите пароль</label>
		<p class="reg"><input class="p5" type="password" required></p>
		<label class="reg">Подтвердите пароль</label>
		<p class="reg"><input class="p5" type="password" required></p>
		<label class="reg">Ф.И.О</label>
		<p class="reg"><input class="p5" type="text"></p>
		<label class="reg">Номер телефона</label>
		<p class="reg"><input class="p5" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"></p>
		<button class="registr">Завершить регистрацию! Вам будет отправлено письмо</button>
	</div>

</body>
</html>
